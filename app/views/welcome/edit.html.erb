<%if guard_signed_in?%>
<% provide(:guard, "Edit Guard") %>
<h1 align="center">Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(current_guard) do |f| %>
      

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :birthday %>
      <%= f.text_field :birthday, class: 'form-control' %>      

      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control' %>
      
      <%= f.label :height %>
      <%= f.text_field :height, class: 'form-control' %>
      

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">

    </div>
  </div>
</div>
<%end%>